<form id="discount-coupon-form" action="<?php echo $this->getFormActionUrl() ?>" method="post" data-abide novalidate>
    <div class="discount">
        <h2><?php echo $this->__('Discount Codes') ?></h2>
        <div class="discount-form">
            <div class="coupon-field">
                <label for="coupon_code"><?php echo $this->__('Enter your coupon code if you have one.') ?>
                    <input type="hidden" name="remove" id="remove-coupone" value="0"/>
                    <input type="text" id="coupon_code"
                           name="coupon_code"
                           value="<?php echo $this->escapeHtml($this->getCouponCode()) ?>"
                           required pattern="text"/>
                    <span class="form-error"><?php echo $this->__('required') ?></span>
                </label>
            </div>
            <div class="stack-for-small button-group">
                <button type="submit"
                        title="<?php echo Mage::helper('core')->quoteEscape($this->__('Apply Coupon')) ?>"
                        value="<?php echo Mage::helper('core')->quoteEscape($this->__('Apply Coupon')) ?>"
                        onclick="discountForm.submit(false)" class="button">
                    <?php echo $this->__('Apply Coupon') ?></button>
                <?php if (strlen($this->getCouponCode())): ?>
                    <button type="submit"
                            title="<?php echo Mage::helper('core')->quoteEscape($this->__('Cancel Coupon')) ?>"
                            value="<?php echo Mage::helper('core')->quoteEscape($this->__('Cancel Coupon')) ?>"
                            onclick="discountForm.submit(true)" class="button">
                        <?php echo $this->__('Cancel Coupon') ?></button>
                <?php endif; ?>
            </div>
        </div>
    </div>
</form>
<script type="text/javascript">
    //<![CDATA[
    var discountForm = new VarienForm('discount-coupon-form');
    discountForm.submit = function (isRemove) {
        if (isRemove) {
            $('remove-coupone').value = "1";
        } else {
            $('remove-coupone').value = "0";
        }
    }
    //]]>
</script>
